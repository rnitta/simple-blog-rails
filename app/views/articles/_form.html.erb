<%= form_for @article, url: path do |f| %>
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  <%= f.label :name, 'パス' %>
  <%= f.text_field :name %>
  <%= f.label :content, '内容' %>
  <%= f.text_area :content %>
  <%= f.label :category, 'カテゴリ' %>
  <% if @article.category.nil? %>
    <%= f.select :category, @blog.categories.map{|cat| [cat.name, cat.name]} %>
  <% else %>
    <%= f.select :category, @blog.categories.map{|cat| [cat.name, cat.name]}, selected: @article.category.name %>
  <% end %>
  <% if @article.errors.any? %>
    <h2>エラー</h2>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.submit "作成" %>
<% end %>
